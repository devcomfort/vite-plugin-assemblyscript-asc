{
  "name": "vite-plugin-assemblyscript",
  "version": "1.0.0",
  "description": "AssemblyScript plugin for Vite: Simple, synchronous WASM module integration with ESM bindings, HMR and source maps",
  "main": "dist/index.js",
  "exports": {
    "import": "./exports/import.mjs",
    "require": "./exports/require.cjs"
  },
  "repository": "https://github.com/krymel/vite-plugin-assemblyscript",
  "author": "krymel <krymel@mailbox.org>",
  "license": "MIT",
  "keywords": [
    "vite",
    "plugin",
    "assemblyscript",
    "webassembly",
    "as",
    "hmr",
    "es-modules",
    "modules"
  ],
  "scripts": {
    "build": "tsc",
    "test": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage --forceExit",
    "format": "prettier --write '**/*.{mjs,cjs,js,ts}'",
    "pretest": "yarn --cwd e2e && playwright install firefox"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@types/node": "^18.11.9",
    "@jsona/openapi": "^0.2.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.12",
    "express": "^4.18.1",
    "jest": "^28.1.3",
    "jest-extended": "^3.0.1",
    "playwright": "^1.23.3",
    "prettier": "^2.7.1",
    "terser": "^5.14.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "wait-port": "^1.0.4"
  },
  "dependencies": {
    "vite": "^3"
  },
  "peerDependencies": {},
  "files": [
    "/dist",
    "/exports"
  ]
}